<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <title><%= @pagetitle %></title>
    <%= stylesheet_link_tag 'hockey' %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div id='pagewrapper'>
      <div id='header'>
        <p>EA Hockey</p>
      </div>
 
      <div id='navbar'>
        <ul>
          <li><%= link_to "Matches", :controller => 'matches' %></li >
          <li><%= link_to "Teams", :controller => 'teams' %></li>
          <li><%= link_to "Players", :controller => 'players' %>
          
					<% if !current_user %>
					  <li> <%= link_to "Register", new_account_path %></li> 
					  <li><%= link_to "Log In", new_user_session_path %></li> 
					<% else %>
					  <li><%= link_to "My Account", account_path %></li>
					  <li><%= link_to "Logout", user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?" %></li>
					<% end %>
					 
        </ul>
      </div>
      <div id='content'>
        <h2><%= flash[:notice] %></h2>
        <%= yield %>
      </div>
      <div id='footer'>
        <p>EA Hockey - It's in the game!.. oh and Rick Rulez</p>
      </div>
    </div>
  </body> 
</html>
